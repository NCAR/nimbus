tools = Split("""
  default 
  boost
  boost_program_options
  ssl
  qtt_qtconfig
  doxygen
""")

env = Environment(tools = tools)

sources = Split("""
main.cpp
Switch.cpp
SwitchServer.cpp
EmbeddedProxy.cpp
EmbeddedProxyServer.cpp
SslProxyServer.cpp
SwitchConnection.cpp
""")

headers = Split("""
Switch.h
SwitchConnection.h
SwitchServer.h
EmbeddedProxy.h
EmbeddedProxyServer.h
SslProxyServer.h
Overview.h
""")

switch = env.Program('switch', sources)
env.Default(switch)

env['DOXYFILE_DICT'].update({ "PROJECT_NAME" : "Switch" })
doxref = env.Apidocs(sources + headers)

