import sys

#env = Environment(tools = ['default', 'qt4', 'logx'])

tools = Split("""
default qt4 logx
""")

env = Environment(tools = ['default']+tools)

#Import('env')
#env = env.Clone(tools = ['default', 'qt4', 'logx'])

qtmods = ['QtSvg', 'QtCore', 'QtGui', 'QtNetwork', 'QtSql', 'QtOpenGL']
env.EnableQt4Modules(qtmods)

env.AppendUnique(CPPPATH = ['/usr/local/include/QtCrypto'])
env.AppendUnique(LIBPATH = ['/usr/local/lib'])
env.AppendUnique(LIBS= ['qca'])

sources = ['instrument.cpp', 'sendudp.cpp']
gensymkeysrcs = ['gensymkey.cc']
fakeacsrcs = ['aircraft.cc', 'sendudp.cpp']
#acswsources = ['acswitch.cpp']

instrument = env.Program('instrument',sources)
gensymkey = env.Program('gensymkey', gensymkeysrcs);
fakeac = env.Program('aircraft', fakeacsrcs);
#acswitch = env.Program('acswitch',acswsources)
#qtudp = env.Program('qtudp',sources)

env.Default(instrument)
env.Default(gensymkey)
env.Default(fakeac)

env.AppendENVPath ('LD_LIBRARY_PATH', '/usr/local/lib')
