<project>
    <shortName>RIC</shortName>
    <fullName>NCAR/EOL/CDS Remote Instrument Control</fullName>
    <version>1.0</version>
    <installerFilename>${product_shortname}-${svnversion}.${platform_exec_suffix}</installerFilename>
    <leftImage>../../Resources/proxy/proxyLeft.png</leftImage>
    <logoImage>../../Resources/proxy/proxy48.png</logoImage>
    <splashImage>../../Resources/proxy/proxyIcon.png</splashImage>
    <preBuildActionList>
        <setInstallerVariable>
            <name>${product_version}</name>
            <persist>1</persist>
            <value>${product_version}-${svnversion}</value>
        </setInstallerVariable>
    </preBuildActionList>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <outputDirectory>${build_project_directory}</outputDirectory>
    <requestedExecutionLevel>asInvoker</requestedExecutionLevel>
    <saveRelativePaths>1</saveRelativePaths>
    <startMenuGroupName>${product_shortname}-${svnversion}</startMenuGroupName>
    <vendor>NCAR</vendor>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <desktopShortcutList>
                <shortcut>
                    <comment>${product_shortname}-${svnversion}</comment>
                    <exec></exec>
                    <icon></icon>
                    <name>${product_shortname}-${svnversion}</name>
                    <path></path>
                    <platforms>all</platforms>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/ric_proxy.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/proxyIcon.ico</windowsIcon>
                    <windowsPath>${install_dir}</windowsPath>
                </shortcut>
            </desktopShortcutList>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_shortname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon>${installdir}/proxyIcon.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../proxy/ric_proxy.exe</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/MinGW/bin/libgcc_s_dw2-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/MinGW/bin/mingwm10.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/MinGW/bin/libgcc_s_dw2-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/Qt/4.6.2/bin/QtCore4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/Qt/4.6.2/bin/QtGui4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/Qt/4.6.2/bin/QtNetwork4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/Qt/4.6.2/bin/QtSvg4.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/MinGW/bin/libstdc++-6.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../Resources/proxy/proxyIcon.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/MinGW/msys/1.0/local/bin/ssleay32.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../../../Tools/MinGW/msys/1.0/local/bin/libeay32.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../mac/RICProxy-${svnversion}.app</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certificates</description>
                    <destination>${windows_folder_appdata}/NCAR/Certificates</destination>
                    <name>WinCertificates</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../test_certs/client.crt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../test_certs/client.key</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../test_certs/eol-rt-data.crt</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Certificates</description>
                    <destination>${user_home_directory}/.config/NCAR/Certificates</destination>
                    <name>OsxCertificates</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../test_certs/client.crt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../test_certs/client.key</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../test_certs/eol-rt-data.crt</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Windows Configuration Files</description>
                    <destination>${windows_folder_appdata}/NCAR</destination>
                    <name>WinConfigFiles</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../proxy/Proxy-Win.ini</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../proxy/Proxy-AVAPS.ini</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>OSX Configuration Files</description>
                    <destination>${user_home_directory}/.config/NCAR</destination>
                    <name>OsxConfigFiles</name>
                    <platforms>osx</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>../../proxy/Proxy-OSX.ini</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>../../proxy/Proxy-AVAPS.ini</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <postInstallationActionList>
                <renameFile>
                    <destination>${windows_folder_appdata}/NCAR/Proxy.ini</destination>
                    <origin>${windows_folder_appdata}/NCAR/Proxy-Win.ini</origin>
                    <ruleList>
                        <platformTest type="windows"/>
                    </ruleList>
                </renameFile>
                <renameFile>
                    <destination>${user_home_directory}/.config/NCAR/Proxy.ini</destination>
                    <origin>${user_home_directory}/.config/NCAR/Proxy-OSX.ini</origin>
                    <ruleList>
                        <platformTest type="osx"/>
                    </ruleList>
                </renameFile>
            </postInstallationActionList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Remote Instrument Control</comment>
                    <name>${product_shortname}-${svnversion}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/ric_proxy.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/proxyIcon.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment>Uninstall ${product_shortname}</comment>
                    <name>Uninstall ${product_shortname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/proxyIcon.ico</windowsIcon>
                    <windowsPath>${installdir}</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <parameterList>
        <stringParameter name="svnversion" value="">
            <description></description>
            <explanation></explanation>
            <default></default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>no</ask>
            <width>40</width>
        </stringParameter>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${user_home_directory}/${product_shortname}-${svnversion}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
    <platformOptionsList>
        <platformOptions>
            <platform>windows</platform>
        </platformOptions>
    </platformOptionsList>
</project>

